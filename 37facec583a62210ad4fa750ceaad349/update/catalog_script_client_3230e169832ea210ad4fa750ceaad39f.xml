        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
	if (isLoading || newValue == '') {
		return;
	}

	//Type appropriate comment here, and begin script below
	var regex = /^\d+$/; // Only numbers

	if (!regex.test(newValue)) {
		g_form.clearValue("quantity");
		g_form.showFieldMsg("quantity", "The quantity must be a number value.", "error", true);
	}

	parseInt(newValue) > 3 
	? g_form.setMandatory("business_justification", true) 
	: g_form.setMandatory("business_justification", false);

}]]></script>
